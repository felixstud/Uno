<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txtStatus" HorizontalAlignment="Left" Margin="95,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="199" Width="631"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="50,48,0,0" VerticalAlignment="Top" Height="18" Width="62" Click="btnConnect_Click"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Margin="262,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Background="#FFECECEC"/>
        <Button x:Name="btnSend" Content="send" HorizontalAlignment="Left" Margin="597,47,0,0" VerticalAlignment="Top" Click="btnSend_Click"/>
        <Button x:Name="btnDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="117,48,0,0" VerticalAlignment="Top" Height="18" Width="62" Click="btnDisconnect_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="50,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>

    </Grid>
</Window>
