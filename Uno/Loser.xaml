<Page x:Class="Uno.Loser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uno"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Loser"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="You Lost!" FontSize="120" HorizontalAlignment="Center"/>
        <Label x:Name="lbl_WinnerName" Margin="20" Width="700" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="center" Grid.Row="1" Height="50" VerticalContentAlignment="Center" FontSize="25"/>

        <Button Content="Exit" FontSize="25" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="50" Margin="20" Click="Button_Click"/>
    </Grid>
</Page>
